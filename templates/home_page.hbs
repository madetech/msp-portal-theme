<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<div class="container">
<section id="main-content" class="section">
  <div class="sub-nav">
  </div>
  <div>
    <legend>
      <h1 style="margin-bottom: 0;">{{help_center.name}}</h1>
    </legend>
    <h2>Support Portal</h2>
    What would you like to do?
  </div>
  <div class="requests-table-toolbar hbs-form; align-items: unset;">
    <form style="display: block; text-align: center; margin: 20px; margin-left: 0;" class="submitbutton" action="{{page_path 'new_request'}}">
      <button type="submit" data-garden-id="buttons.button" data-garden-version="8.76.2" class="button-large">Add new request</button>
    </form>

    <form  style="display: block; text-align: center; margin: 20px; margin-left: 0;"class="requestbutton" action="{{page_path 'my_activities'}}">
      <button type="submit" data-garden-id="buttons.button" data-garden-version="8.76.2" class="button-large button-secondary">View existing requests</button>
    </form>
  </div>
</section>
</div>

<div class="container">
  <section class="section knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
            <li class="blocks-item">
              <a href='{{url}}' class="blocks-item-link">
                <span class="blocks-item-title">{{name}}</span>
                <span class="blocks-item-description">{{excerpt description}}</span>
              </a>
            </li>
          {{else}}
            {{#each sections}}
              <li class="blocks-item">
                <a href='{{url}}' class="blocks-item-link">
                  <span class="blocks-item-title">
                    {{name}}
                  </span>
                  <span class="blocks-item-description">{{excerpt description}}</span>
                </a>
              </li>
            {{/each}}
          {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

</div>
